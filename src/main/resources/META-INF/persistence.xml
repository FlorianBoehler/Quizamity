<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="quizamityPU" transaction-type="JTA">

        <!-- JPA provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Declare JTA-managed DataSource by JNDI name -->
        <jta-data-source>jdbc/quizamityDS</jta-data-source>

        <properties>
            <!-- Hibernate-specific settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.archive.autodetection" value="class"/>

            <!-- Optional: fallback JDBC (used for some IDEs or tools) -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="${env.DB_URL}"/>
            <property name="jakarta.persistence.jdbc.user" value="${env.DB_USER}"/>
            <property name="jakarta.persistence.jdbc.password" value="${env.DB_KEY}"/>
        </properties>
    </persistence-unit>
</persistence>
